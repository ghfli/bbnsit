{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "hyinsit-types": ["../types/src"],
      "hyinsit-backend-core": ["../backend-core/src"],
      "hyinsit-backend-core/*": ["../backend-core/*.js"]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "references": [
    { "path": "../types" },
    { "path": "../backend-core" },
  ]
}